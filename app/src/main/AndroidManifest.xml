<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kaysersose.fiszki">

    <application
        android:name=".app.FiszkiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".addingdeck.AddingDeckActivity" />
        <activity
            android:name=".addingcards.AddingCardsActivity"
            android:label="@string/title_activity_adding_cards"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".learning.LearningFromDeckActivity" />
        <activity
            android:name=".editingdeck.EditingDeckActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".editingcard.EditingCardActivity"></activity>
    </application>

</manifest>